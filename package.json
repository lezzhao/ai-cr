{
  "name": "ai-cr",
  "version": "0.1.0",
  "description": "AI驱动的代码审查工具，支持Git hooks集成和智能代码质量分析",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ai-cr": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli.ts",
    "start": "node dist/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest tests/integration.test.ts",
    "test:cli": "jest tests/cli.test.ts",
    "test:web": "jest tests/web.test.ts",
    "test:e2e": "jest tests/e2e.test.ts",
    "test:all": "jest --coverage",
    "test:manual": "node test-manual.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "web:dev": "tsx watch src/web/server.ts",
    "web:build": "tsc && cd src/web && npm run build",
    "prepare": "husky install"
  },
  "keywords": [
    "ai",
    "code-review",
    "git-hooks",
    "code-analysis",
    "typescript",
    "deepseek",
    "openai",
    "moonshot"
  ],
  "author": "levan",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/static": "^8.2.0",
    "@types/node": "^20.10.0",
    "axios": "^1.6.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "fastify": "^5.0.0",
    "git-parse": "^1.0.0",
    "glob": "^10.3.10",
    "inquirer": "^9.2.12",
    "marked": "^9.1.6",
    "mime-types": "^2.1.35",
    "ora": "^7.0.1",
    "simple-git": "^3.19.1",
    "ws": "^8.14.2",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/mime-types": "^2.1.4",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
